  <body>

	
	<div class="container form-container">
	  <form name="postForm" action="/payment" method="POST">
	
		<div class="form-group">
		  <label for="firstname" class="col-md-2">Firstname</label>
		  <input id="firstname" type="text" name="firstname" value="" />
		</div>
		
		<div class="form-group">
		  <label for="emailid" class="col-md-2">Email Address</label>
		  <input id="emailid" type="text" name="email" value="" />
		</div>
		
		<div class="form-group">
		  <label for="phone" class="col-md-2">Phone</label>
		  <input id="phone" type="text" name="phone" value="" />
		</div>
		
		<button type="submit" class="btn ">Submit</button>

	  </form>
	</div>
	
